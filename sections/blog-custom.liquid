<script>
  function initBlogPosts{{ section.id | replace: '-', '_' }}() {
    const sectionId = '{{ section.id }}';
    const tabs = document.querySelectorAll(`#section-${sectionId} .blog-tab`);
    const blogs = document.querySelectorAll(`#section-${sectionId} .blog-blog`);
    const rightArticles = document.querySelectorAll(`#section-${sectionId} .blog-right-articles`);
    const images = document.querySelectorAll(`#section-${sectionId} .blog-article-image`);
    images.forEach(image => {
      const aspectRatio = image.getAttribute('data-aspect-ratio');
      if (aspectRatio) {
        image.style.setProperty('--aspect-ratio', aspectRatio);
      }
    });
    
    if (blogs.length > 0) {
      blogs[0].classList.add('active');
    }
    
    if (rightArticles.length > 0) {
      rightArticles[0].classList.add('active');
    }

    if(tabs.length > 0) {
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          tabs.forEach(tab => tab.classList.remove('active'));
          blogs.forEach(blog => blog.classList.remove('active'));
          rightArticles.forEach(articles => articles.classList.remove('active'));

          tab.classList.add('active');
          
          const tabId = tab.id;
          blogs.forEach(blog => {
            if(blog.getAttribute('data-id') === tabId) {
              blog.classList.add('active');
            }
          });
          
          rightArticles.forEach(articles => {
            if(articles.getAttribute('data-id') === tabId) {
              articles.classList.add('active');
            }
          });
        });
      });
    }
  }

  document.addEventListener('DOMContentLoaded', initBlogPosts{{ section.id | replace: '-', '_' }});
  if (Shopify.designMode) {
    document.addEventListener('shopify:section:unload', initBlogPosts{{ section.id | replace: '-', '_' }});
    document.addEventListener('shopify:section:load', initBlogPosts{{ section.id | replace: '-', '_' }});
  }
</script>

