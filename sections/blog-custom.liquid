<style>
  #section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_vertical_mobile }}px {{ section.settings.padding_horizontal_mobile }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
  }
  
  #section-{{ section.id }} .blog-posts-container {
    margin: 0 auto;
  }

  #section-{{ section.id }} .blog-top {
    display: flex;
    flex-direction: column;
    gap: 20px;
    justify-content: space-between;
    align-items: center;
  }

  #section-{{ section.id }} .blog-title {
    margin: 0;
    max-width: 100%;
    width: 100%;
    font-size: {{ section.settings.title_size_mobile }}px; 
    line-height: 130%;
    color: {{ section.settings.title_color }};
    font-weight: 700;
  }

  #section-{{ section.id }} .blog-tabs {
    display: flex;
    align-items: center;
    gap: 18px;    
    overflow-x: auto;
    scrollbar-width: none;
    width: 100%;
  }

  #section-{{ section.id }} .blog-tabs::-webkit-scrollbar {
    display: none;
  }

  #section-{{ section.id }} .blog-tab {
    margin: 0;
    position: relative;
    font-size: {{ section.settings.tab_size_mobile }}px; 
    line-height: 130%;
    color: {{ section.settings.tab_color }};
    cursor: pointer;
    transition: all 0.25s ease 0s;
    font-weight: 700;
    min-width: max-content;
  }

  #section-{{ section.id }} .blog-tab.active {
    color: {{ section.settings.tab_active_color }};
    transition: all 0.25s ease 0s;
  }

  #section-{{ section.id }} .blog-tab::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: {{ section.settings.tab_underline_color }};
    transition: all 0.25s ease 0s;
  }

  #section-{{ section.id }} .blog-tab.active::after {
    width: 100%;
  }

  #section-{{ section.id }} .blog-blog {
    display: none;
    grid-template-columns: 1fr;
    gap: 0px;
    margin-top: 20px;
  }

  #section-{{ section.id }} .blog-blog.active {
    display: grid;
  }

  #section-{{ section.id }} .blog-empty-content {
    padding: 20px;
    background-color: rgba(0,0,0,0.1);
    color: {{ section.settings.title_color }};
    border-radius: 8px;
  }
  
  #section-{{ section.id }} .blog-big-article {
    display: flex;
    flex-direction: column; 
    padding: 24px 0px;
    border-top: 1px solid {{ section.settings.article_border_color }};
    border-bottom: 0px;
    gap: 20px;
    grid-column-end: initial;
  }
  
  #section-{{ section.id }} .blog-article {
    display: flex;
    flex-direction: column; 
    padding: 24px 0px;   
    border-top: 1px solid {{ section.settings.article_border_color }};
    border-bottom: 0px;
    gap: 20px;
  }

  #section-{{ section.id }} .blog-article:last-child {
    border-bottom: 1px solid {{ section.settings.article_border_color }};
  }

  #section-{{ section.id }} .blog-article-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1 1 0;
    gap: 12px;
  }

  #section-{{ section.id }} .blog-article-title-wrap {
    display: flex;
    gap: 6px;
    align-items: center;
    flex-wrap: wrap;
  }

  #section-{{ section.id }} .blog-article-link {
    text-decoration: none;
    display: block;
  }

  #section-{{ section.id }} .blog-article-image-link {
    display: block;
    text-decoration: none;
  }

  #section-{{ section.id }} .blog-article-title,
  #section-{{ section.id }} .blog-article-tag {
    margin: 0;
    font-size: {{ section.settings.article_title_size_mobile }}px; 
    line-height: 130%;
    color: {{ section.settings.article_title_color }};
    font-weight: 700;
    transition: all 0.5s ease 0s;
  }

  #section-{{ section.id }} .blog-article-tag {
    color: {{ section.settings.article_tag_color }};
    transition: all 0.25s ease 0s;
  }

  #section-{{ section.id }} .blog-article-text {
    margin: 0;
    font-size: {{ section.settings.article_text_size_mobile }}px; 
    line-height: 150%;
    color: {{ section.settings.article_text_color }};
    opacity: 1;
    transition: all 0.5s ease 0s;
  }

  #section-{{ section.id }} .blog-article-image {
    position: relative; 
    overflow: hidden;
    border-radius: {{ section.settings.article_image_border_radius }}px;
    width: 100%;
    padding-top: calc(100% / (var(--aspect-ratio))); 
  }

  #section-{{ section.id }} .blog-article-image img,
  #section-{{ section.id }} .blog-article-image svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    transition: all 0.5s ease 0s;
  }

  #section-{{ section.id }} .blog-article-image svg {
    background-color: #CECECE;
  }

  #section-{{ section.id }} .blog-right-articles-wrapper {
    grid-column-end: initial;
  }

  #section-{{ section.id }} .blog-right-articles {
    display: none;
    grid-template-columns: 1fr;    
  }

  #section-{{ section.id }} .blog-right-articles.active {
    display: grid;
  }

  #section-{{ section.id }} .blog-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: fit-content;
    margin: 0;
    margin-top: 24px;
    font-size: {{ section.settings.button_text_size }}px;
    color: {{ section.settings.button_text_color }};
    line-height: 100%;
    text-align: center;
    text-decoration: none;
    padding: 12px 28px;
    border-radius: 100px;
    transition: all 0.25s ease 0s;
    background-color: {{ section.settings.button_bg_color }};
    border: 1px solid {{ section.settings.button_border_color }};
    cursor: pointer;
    font-weight: 700;
  }

  #section-{{ section.id }} .blog-button-inner {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  #section-{{ section.id }} .blog-button svg {
    width: 14px;
    height: 14px;
  }

  #section-{{ section.id }} .blog-button svg path {
    fill: {{ section.settings.button_text_color }};
    transition: all 0.25s ease 0s;
  }

  @media(min-width: 1024px) {
    #section-{{ section.id }} {
      padding: {{ section.settings.padding_vertical_desktop }}px {{ section.settings.padding_horizontal_desktop }}px;
    }
    
    #section-{{ section.id }} .blog-top {
      flex-direction: row;
    }

    #section-{{ section.id }} .blog-title {
      max-width: 40%;
      font-size: {{ section.settings.title_size_desktop }}px; 
    }

    #section-{{ section.id }} .blog-tabs {
      gap: 24px;    
      overflow-x: visible;
      width: auto;
    }

    #section-{{ section.id }} .blog-tab {
      font-size: {{ section.settings.tab_size_desktop }}px; 
    }

    #section-{{ section.id }} .blog-tab:hover {
      color: {{ section.settings.tab_active_color }};
      transition: all 0.25s ease 0s;
    }

    #section-{{ section.id }} .blog-tab:hover::after {
      width: 100%;
      transition: all 0.25s ease 0s;
    }

    #section-{{ section.id }} .blog-blog {
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      gap: 80px;
      margin-top: 40px;
    }

    #section-{{ section.id }} .blog-big-article {
      flex-direction: row; 
      justify-content: space-between;
      align-items: flex-start;
      border-top: 1px solid {{ section.settings.article_border_color }};
      border-bottom: 1px solid {{ section.settings.article_border_color }};
      padding: 24px 0px;
      grid-column-end: span 3;
      gap: 30px;
    }

    #section-{{ section.id }} .blog-article {
      flex-direction: row; 
      justify-content: space-between;
      align-items: flex-start;
      padding: 24px 0px;
      gap: 30px;
    }

    #section-{{ section.id }} .blog-article-title,
    #section-{{ section.id }} .blog-article-tag {
      font-size: {{ section.settings.article_title_size_desktop }}px; 
    }

    #section-{{ section.id }} .blog-article-tag:hover {
      color: {{ section.settings.article_title_color }};
      transition: all 0.25s ease 0s;
    }

    #section-{{ section.id }} .blog-article-text {
      font-size: {{ section.settings.article_text_size_desktop }}px; 
      opacity: 0;
      transform: translateY(-10%);
    }    

    #section-{{ section.id }} .blog-big-article:hover .blog-article-text {
      opacity: 1;
      transform: translateY(0%);
      transition: all 0.5s ease 0s;
    }
    
    #section-{{ section.id }} .blog-article:hover .blog-article-text {
      opacity: 1;
      transform: translateY(0%);
      transition: all 0.5s ease 0s;
    }
    
    #section-{{ section.id }} .blog-article-title-wrap:hover {
      transform: skew(-10deg);
      transition: all 0.5s ease 0s;
    }

    #section-{{ section.id }} .blog-right-articles-wrapper {
      grid-column-end: span 2;
    }

    #section-{{ section.id }} .blog-article:not(:last-child) {
      border-top: 1px solid {{ section.settings.article_border_color }};
    }

    #section-{{ section.id }} .blog-article:last-child {
      border-top: 1px solid {{ section.settings.article_border_color }};
      border-bottom: 1px solid {{ section.settings.article_border_color }};
    }

    #section-{{ section.id }} .blog-big-article:hover .blog-article-image img,
    #section-{{ section.id }} .blog-big-article:hover .blog-article-image svg {
      transition: all 0.5s ease 0s;
      transform: scale(1.1);
    }

    #section-{{ section.id }} .blog-article:hover .blog-article-image img,
    #section-{{ section.id }} .blog-article:hover .blog-article-image svg {
      transition: all 0.5s ease 0s;
      transform: scale(1.1);
    }

    #section-{{ section.id }} .blog-article-content {
      width: 60%; 
    }

    #section-{{ section.id }} .blog-article-image-link {
      width: 40%; 
    }

    #section-{{ section.id }} .blog-button {
      margin-top: 60px;
      padding: 12px 28px;
      font-size: {{ section.settings.button_text_size }}px;
    }
    
    #section-{{ section.id }} .blog-button:hover {
      color: {{ section.settings.button_text_hover_color }};
      background-color: {{ section.settings.button_bg_hover_color }};
      border-color: {{ section.settings.button_border_hover_color }};
      transition: all 0.25s ease 0s;
    }

    #section-{{ section.id }} .blog-button:hover svg path {
      fill: {{ section.settings.button_text_hover_color }};
      transition: all 0.25s ease 0s;
    }
  }
  </style>
