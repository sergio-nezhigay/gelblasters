                      {% assign main_ratio_parts = main_aspect_ratio | split: "/" %}
                      {% assign main_ratio_width = main_ratio_parts[0] | plus: 0 %}
                      {% assign main_ratio_height = main_ratio_parts[1] | plus: 0 %}
                    {% else %}
                      {% assign main_ratio_width = main_aspect_ratio | plus: 0 %}
                      {% assign main_ratio_height = 1 %}
