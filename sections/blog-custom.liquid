<section id="section-{{ section.id }}" class="blog-posts-wrapper {{ section.settings.custom_class }}" style="background-color:{{ section.settings.background_color }};">
  <div class="blog-posts-container" style="max-width: {{ section.settings.section_max_width }}px;">
    <div class="blog-top">
  {% if section.settings.title != blank %}
    <h2 class="blog-title">{{ section.settings.title }}</h2>
  {% endif %}
  
  <div class="blog-tabs">
    {% for block in section.blocks %}
      {% if block.type == 'tab' %}
        <p class="blog-tab {% if forloop.first and section.blocks[0].type == 'tab' %}active{% endif %}" id="tab_{{ block.id }}">{{ block.settings.tab_title }}</p>
      {% elsif block.type == 'tab_link' %}
        <a href="{{ block.settings.tab_url }}" class="blog-tab-link">{{ block.settings.tab_title }}</a>
      {% endif %}
    {% endfor %}
  </div>       
</div>
    <div class="blog-blogs">
      {% for tab_block in section.blocks %}
        {% if tab_block.type == 'tab' %}
          {% assign tab_id = tab_block.id %}
          {% assign found_content = false %}
          
          {% for content_block in section.blocks %}
            {% if content_block.type == 'tab_content' and content_block.settings.tab_id == tab_id %}
              {% assign found_content = true %}
              
              <div class="blog-blog {% if forloop.first or forloop.index == 1 %}active{% endif %}" data-id="tab_{{ tab_id }}">
                <div class="blog-big-article">
                  <div class="blog-article-content">
                    <div class="blog-article-title-wrap">
                      {% if content_block.settings.main_article_title != blank %}
                        <a href="{{ content_block.settings.main_article_url | default: '#' }}" class="blog-article-link">
                          <span>
                            <span class="blog-article-title">
                              <span>{{ content_block.settings.main_article_title }}</span>      
                              {% if content_block.settings.main_article_tag != blank %}
                                <span>
                                  <span class="blog-article-tag">{{ content_block.settings.main_article_tag }}</span>                   
                                </span>                         
                              {% endif %}                
                            </span>    
                          </span>
                        </a>                                                        
                      {% endif %}                 
                    </div>
                    {% if content_block.settings.main_article_text != blank %}
                      <div class="blog-article-text">{{ content_block.settings.main_article_text }}</div>
                    {% endif %}
                  </div>
                  <a href="{{ content_block.settings.main_article_url | default: '#' }}" class="blog-article-image-link">
