{%- liquid
  if section.settings.enable_carousel
    assign elements_limit = 20
  else
    assign elements_limit = section.settings.grid | times: section.settings.rows
  endif

  assign blog = blogs[section.settings.blog]
  assign elements = blog.articles
-%}

<div class="section-id-{{ section.id }} elements-slider-row {% if section.settings.color_scheme != 'default' %}use-color-scheme use-color-scheme--{{ section.settings.color_scheme }}{% endif %}">
  <div class="container{% if section.settings.enable_carousel %} container--not-mobile{% endif %}{% if section.settings.full_width %} container--no-max{% endif %}">
    {%- if section.settings.enable_carousel -%}
      <carousel-slider class="carousel block collection-slider">
    {%- endif -%}

    <div
      class="hometitle align-center has-paging{% if section.settings.enable_carousel %} slider-nav{% endif %}"
      {%- render 'animation-attrs', attrs: 'data-cc-animate data-cc-animate-delay="0.3s"' -%}
    >
      {% if section.settings.enable_carousel %}
        <button name="prev" class="slider-nav__btn has-ltr-icon">
          <span class="visually-hidden">{{ 'general.slider.previous' | t }}</span>
          {% render 'icon-chevron-left' %}
        </button>
      {% endif %}
      <h2 class="has-paging__title h2 m-0">
        {% if blog %}
          <a href="{{ blog.url }}">{{ section.settings.title | escape }}</a>
        {% else %}
          {{ section.settings.title | escape }}
        {% endif %}
      </h2>

      {% if section.settings.enable_carousel %}
        <button name="next" class="slider-nav__btn has-ltr-icon">
          <span class="visually-hidden">{{ 'general.slider.next' | t }}</span>
          {% render 'icon-chevron-right' %}
        </button>
      {% endif %}
    </div>

    <div
      class="collection-listing fade-in-up{% if section.settings.enable_carousel %} slider {% if section.settings.full_width %}slider--edge-peek{% endif %} slider--mobile-container-pad slider--no-scrollbar{% endif %}"
      {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}
    >
      <div class="product-grid product-grid--per-row-{{ section.settings.grid }} product-grid--per-row-mob-{{ settings.prod_thumb_mob_per_row }}{% if section.settings.enable_carousel %} slider__grid product-grid--carousel{% endif %}">
        {%- if elements.size == 0 -%}
          <p>No elements selected</p>
        {%- else -%}
          {%- for element in elements limit: elements_limit -%}
            {%- if section.settings.enable_carousel -%}
              <div class="slider__item">
            {%- endif -%}
            <div class="element-block article-list">
              <a href="{{ element.url }}" class="article">
                {%- if element.image -%}
                  <div
                    class="blog-image-16-9"
                  >
                    <img
                      src="{{ element.image | img_url: '800x450' }}"
                      alt="{{ element.title | escape }}"
                      loading="lazy"
                      class="blog-image-img"
                    >
                  </div>
                {%- endif -%}
                <h3>{{ element.title | escape }}</h3>
                {% if section.settings.show_date %}
                  <div class="meta meta--after-title small-text">
                    <div class="iconmeta time">
                      {% if section.settings.show_date %}
                        {{ element.published_at | time_tag: format: 'date' }}
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
                <div class="rte">
                  {%- if element.excerpt.size > 0 -%}
                    {{ element.excerpt }}
                  {%- else -%}
                    {{ element.content | strip_html | truncatewords: 30 }}
                  {%- endif -%}
                </div>

                <div>
                  <a class="small-feature-link" href="{{ element.url }}" aria-hidden="true">
                    {{- 'blogs.article.read_more' | t -}}
                  </a>
                </div>
              </a>
            </div>
            {%- if section.settings.enable_carousel -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>

    {%- if section.settings.enable_carousel -%}
      </carousel-slider>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .blog-slider {
    background-color: #8ecad6;
  }

  .blog-slider .element-block {
    margin-bottom: 10px;
  }
  .blog-slider .rte {
    color: black;
  }
  .blog-slider .small-feature-link {
    color: black;
    text-decoration-color: unset;
    font-size: var(--small-feature-link-font-size);
  }
  .blog-slider .elements-slider-row {
    padding-bottom: 50px;
    padding-top: 50px;
    margin-top: 0;
  }
  .blog-slider .blog-image-16-9 {
    position: relative;
    width: 100%;
    padding-top: 56.25%;
    overflow: hidden;
    margin-bottom: 16px;
  }
  .blog-slider .blog-image-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .iconmeta.time {
    color: black;
  }
  .slider-nav__btn {
    opacity: 0.7;
  }
  .slider-nav__btn:hover {
    opacity: 0.8;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Blogs slider",
  "class": "blog-slider",
  "disabled_on": {
    "templates": ["password"],
    "groups": ["aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured slider"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "Enable carousel",
      "default": true
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Products per row",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "rows",
      "label": "Rows",
      "info": "Does not apply to carousel layout",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 1
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "default",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ]
    },
    {
      "id": "full_width",
      "type": "checkbox",
      "label": "Full page width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured slider",
      "settings": {
        "title": "Featured slider"
      }
    }
  ]
}
{% endschema %}
